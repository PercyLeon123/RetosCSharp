<div class="column is-3-widescreen is-4-desktop is-6-tablet ">
    <div class="card">
        <div class="card-image">
            <figure class="image is-4by3 mx-0">
                <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
            </figure>
        </div>
        <div class="card-content">
            <div class="media">
                <div class="media-left">
                    <figure class="image is-48x48 mx-0">
                        <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                    </figure>
                </div>
                <div class="media-content">
                    <p class="title is-4">John Smith</p>
                    <p class="subtitle is-6">johnsmith</p>
                </div>
            </div>

            <div class="content">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                Phasellus nec iaculis mauris. <a>bulmaio</a>.
                <a href="#">#css</a> <a href="#">#responsive</a>
                <br>
                <time datetime="2016-1-1">@Horario.FechaHorarioInicio - @Horario.FechaHorarioFin</time>
            </div>
            <div class="content pt-0">
                <div class="buttons are-small">
                    <button class="button is-info is-success" disabled="@(!Horario.Disponible)" @onclick="EscogerHorario">Realizar Recerva</button>
                    @if (AnularRecerva)
                    {
                        <button class="button is-info is-danger" @onclick="CancelarHorario">Anular Recerva</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>